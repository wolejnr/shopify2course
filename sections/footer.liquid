<footer class="footer">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="row">
          {%- for block in section.blocks -%}
            <div class="col-md-2">
              <div class="footer__links">
                <span class="footer__column-title">
                  {{block.settings.heading}}
                </span>
                {%- for link in block.settings.menu.links -%}
                  <a href="{{link.url}}" class="footer__link">{{link.title}}</a>
                {%- endfor -%}
              </div>
            </div>
          {%- endfor -%}
          
        </div>
      </div>
      <div class="col-md-3">
        <div class="footer__extra">
          {% if section.settings.newsletter_enable != false %}
          <span class="footer__column-title">
            {{section.settings.newsletter_heading}}
          </span>

          {%- form 'customer' -%}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="newsletter-form__field-wrapper">
                <div class="field">
                  <input
                    type="email"
                    name="contact[email]"
                    class="footer__input"
                    value="{{ form.email }}"
                    aria-required="true"
                    autocorrect="off"
                    autocapitalize="off"
                    autocomplete="email"
                    {% if form.errors %}
                      autofocus
                      aria-invalid="true"
                      aria-describedby="ContactFooter-error"
                    {% elsif form.posted_successfully? %}
                      aria-describedby="ContactFooter-success"
                    {% endif %}
                    placeholder="name@domain.com"
                    style="width: 100%;"
                    required
                  >
                  
                </div>
                {%- if form.errors -%}
                  <small style="color: red; font-size: .9rem;">{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
                {%- endif -%}
                <button type="submit" name="commit" style="width: 100%; font-size: 1rem; padding: 10px 40px; text-align: center; margin-bottom: 1rem;" aria-label="{{ 'newsletter.button_label' | t }}">
                  Subscribe
                </button>
              </div>
              <!-- <button type="submit" name="commit" style="width: 100%; font-size: 1rem; padding: 10px 40px; text-align: center; margin-bottom: 1rem;" aria-label="{{ 'newsletter.button_label' | t }}">
                Subscribe {%comment%}{% render 'icon-arrow' %}{%endcomment%}
              </button> -->
              {%- if form.posted_successfully? -%}
                <h3 style="color: green; font-size: .9rem;">{{ 'newsletter.success' | t }}</h3>
              {%- endif -%}
            {%- endform -%}
          {% endif %}




          <p>{{ section.settings.footer_p }}</p>
          {% if section.settings.show_social != false %}
           <div class="footer__social-icons">
            {%- if settings.social_facebook_link != blank -%}
              <a href="{{settings.social_facebook_link}}" class="footer__social-link"><i class="fab fa-facebook"></i></a>
            {%- endif -%}
            {%- if settings.social_twitter_link != blank -%}
              <a href="{{settings.social_twitter_link}}" class="footer__social-link"><i class="fab fa-twitter"></i></a>
            {%- endif -%}
            {%- if settings.social_instagram_link != blank -%}
              <a href="{{settings.social_instagram_link}}" class="footer__social-link"><i class="fab fa-instagram"></i></a>
            {%- endif -%}
            {%- if settings.social_youtube_link != blank -%}
              <a href="{{settings.social_youtube_link}}" class="footer__social-link"><i class="fab fa-youtube"></i></a>
            {%- endif -%}
            {%- if settings.social_tiktok_link != blank -%}
              <a href="{{settings.social_tiktok_link}}" class="footer__social-link"><i class="fab fa-tiktok"></i></a>
            {%- endif -%}
          </div>
        {% endif %}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="footer__bottom">
          <div class="footer__copyright">
            Â© {{ 'now' | date: "%Y" }}, {{ shop.name }} All Rights Reserved
          </div>
          <div class="footer__extra-links">
            {%- for link in section.settings.footer_bottom_menu.links -%}
              <a href="{{ link.url }}">{{ link.title }}</a>
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

